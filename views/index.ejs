<%- include("header") -%>

    <section id="home">
        <div class="container-fluid shortener">
            <h2>Tired of long urls ?</h2>
            <h1 class="tagline">Paste. Curt. Share.</h1>

            <% if (locals.error) { %>
                <p class="error"><%= error %></p>
            <% } %>
            <form class="url-form" action="/shortUrls" method="post">
                <div class="url-box">
                    <input autocomplete="off" type="url" name="fullUrl" id="fullUrl"
                        placeholder="Enter a URL to shorten">
                    <button class="short-btn" type= "submit" >curt</button>
                </div>
            </form>
           
            <div class="url-box box-short <%=hidden%>">
                <a id="short-url" href="<%= shortURL %>" target="blank"><%= shortURL %></a>
                <button class="short-btn share-btn"><i class="fas fa-share-alt"></i></button>
            </div>
      
        </div>
    </section>

<%- include("footer") -%>
